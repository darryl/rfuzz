require 'rubygems'
require 'spec'
require 'lib/gen'
import %w(rubytest rubydoc rubypackage clean md5)

lib_files = sys["lib/**/*.rb"]
dist_files = lib_files + sys["README", "root.rant", "{test,bin}/*"]

desc "Runs all available tests"
task :all => ["test/http/all", "test/rails/all", "test/camping/all", "test/nitro/all"]

desc "Remove autogenerated and backup files."
gen Clean
var[:clean].include "doc", "pkg", "*~", "tmp"

subdirs "gen"
subdirs "test"
